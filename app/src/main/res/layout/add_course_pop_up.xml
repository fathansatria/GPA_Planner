<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/iv_popup_background">

    <EditText
        android:id="@+id/et_courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@drawable/et_box1"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="16dp"
        android:hint="Course Name" />

    <EditText
        android:layout_below="@id/et_courseName"
        android:id="@+id/et_courseSks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_box1"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="16dp"
        android:hint="Course Credit" />

    <EditText
        android:id="@+id/et_courseTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_box1"
        android:hint="Lecturer"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_below="@id/et_courseSks"/>

    <LinearLayout
        android:layout_below="@id/et_courseTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/btn_cancel" />

        <ImageButton
            android:id="@+id/btn_add_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:elevation="10dp"
            app:srcCompat="@drawable/btn_add" />

    </LinearLayout>


</RelativeLayout>