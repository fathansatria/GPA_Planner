<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1A8D6"
    tools:context=".CourseDetail">

    <android.support.design.widget.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tv_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@string/app_name"
                android:text="Discreate Mathematics"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/tbox"
        android:layout_width="343dp"
        android:layout_height="334dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:padding="0dp"
        app:srcCompat="@drawable/iv_purplerec" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="366dp"
        android:layout_height="217dp"
        android:layout_below="@id/tbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:padding="0dp"
        app:srcCompat="@drawable/iv_componenbox" />

    <ImageView
        android:id="@+id/targetbox"
        android:layout_width="308dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        app:srcCompat="@drawable/iv_mytarget" />

    <EditText
        android:id="@+id/et_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:ems="2"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:hint="A" />

    <ImageView
        android:id="@+id/iv_currentbox"
        android:layout_width="315dp"
        android:layout_height="62dp"
        android:layout_below="@id/targetbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/iv_currentscoregroup" />

    <ImageView
        android:id="@+id/iv_progressbox"
        android:layout_width="315dp"
        android:layout_height="62dp"
        android:layout_below="@id/iv_currentbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/iv_progressscore" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="418dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="2">

        <ImageButton
            android:id="@+id/btn_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:clickable="true"
            app:srcCompat="@drawable/iv_assingmentgroup" />

        <ImageButton
            android:id="@+id/btn_uas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:clickable="true"
            app:srcCompat="@drawable/iv_uasgroup" />

        <ImageButton
            android:id="@+id/btn_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="true"
            app:srcCompat="@drawable/iv_quizgroup" />

        <ImageButton
            android:id="@+id/btn_fp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="true"
            app:srcCompat="@drawable/iv_finalprojectgroup"
            />

        <ImageButton
            android:id="@+id/btn_uts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="true"
            app:srcCompat="@drawable/iv_utsgroup" />

        <ImageButton
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:clickable="true"
            app:srcCompat="@drawable/iv_praktikumgroup" />

    </GridLayout>

    <TextView
        android:id="@+id/tv_uas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Not Set" />

    <TextView
        android:id="@+id/tv_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_toStartOf="@+id/tv_uas"
        android:layout_toLeftOf="@+id/tv_uas"
        android:gravity="center"
        android:hint="Not Set" />

    <TextView

        android:id="@+id/tv_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="449dp"
        android:layout_toEndOf="@+id/tv_uas"
        android:layout_toRightOf="@+id/tv_uas"
        android:gravity="center"
        android:hint="Not Set" />

    <TextView
        android:id="@+id/tv_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_assign"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:hint="Not Set" />

    <TextView
        android:id="@+id/tv_uts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_uas"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="66dp"
        android:layout_toEndOf="@+id/tv_final"
        android:layout_toRightOf="@+id/tv_final"
        android:gravity="center"
        android:hint="Not Set" />

    <TextView
        android:id="@+id/tv_praktikum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_quiz"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="66dp"
        android:layout_toEndOf="@+id/tv_uts"
        android:layout_toRightOf="@+id/tv_uts"
        android:gravity="center"
        android:hint="Not Set" />

    <TextView
        android:id="@+id/tv_current_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="256dp"
        android:ems="5"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="A+" />


</RelativeLayout>